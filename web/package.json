{
  "name": "isobel-web",
  "private": true,
  "version": "1.1.0",
  "description": "Web interface for ISOBEL Discord music bot",
  "type": "module",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "dev": "vite",
    "dev:server": "tsx watch src/server/index.ts",
    "dev:all": "concurrently \"pnpm run dev\" \"pnpm run dev:server\" --names \"vite,api\" --prefix-colors \"cyan,yellow\"",
    "build": "tsc -b && vite build",
    "build:prod": "pnpm run build",
    "vercel-build": "pnpm run build",
    "preview": "vite preview",
    "start": "pnpm exec tsx src/server/serve.ts",
    "lint": "eslint .",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "tsx scripts/migrate.ts",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "pm2:start:web": "pm2 start ecosystem.config.cjs --only isobel-web",
    "pm2:restart:web": "pm2 restart ecosystem.config.cjs --only isobel-web --update-env",
    "pm2:stop:web": "pm2 stop isobel-web",
    "pm2:delete:web": "pm2 delete isobel-web",
    "pm2:start": "pm2 start ecosystem.config.cjs",
    "pm2:start:dev": "pm2 start ecosystem.config.cjs --env development",
    "pm2:start:prod": "pm2 start ecosystem.config.cjs --env production",
    "pm2:stop": "pm2 stop isobel-web",
    "pm2:restart": "pm2 restart isobel-web --update-env",
    "pm2:reload": "pm2 reload isobel-web --update-env",
    "pm2:delete": "pm2 delete isobel-web",
    "pm2:logs": "pm2 logs",
    "pm2:logs:web": "pm2 logs isobel-web",
    "pm2:monit": "pm2 monit",
    "pm2:status": "pm2 status",
    "pm2:flush": "pm2 flush",
    "pm2:save": "pm2 save",
    "pm2:resurrect": "pm2 resurrect",
    "pm2:startup": "pm2 startup",
    "pm2:kill": "pm2 kill"
  },
  "dependencies": {
    "@auth/core": "0.41.1",
    "@auth/drizzle-adapter": "^1.11.1",
    "@types/express": "^5.0.6",
    "dotenv": "^17.3.1",
    "drizzle-orm": "^0.44.7",
    "express": "^5.2.1",
    "express-rate-limit": "^7.5.1",
    "helmet": "^7.2.0",
    "postgres": "^3.4.8",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "react-icons": "^5.5.0",
    "tsx": "^4.21.0",
    "winston": "^3.19.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.3",
    "@types/express-rate-limit": "^5.1.3",
    "@types/node": "^25.3.2",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "@vercel/node": "^3.2.29",
    "@vitejs/plugin-react": "^5.1.4",
    "concurrently": "^9.2.1",
    "drizzle-kit": "^0.31.9",
    "eslint": "^9.39.3",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.26",
    "globals": "^16.5.0",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.56.1",
    "vite": "^7.3.1"
  },
  "packageManager": "pnpm@10.30.2"
}
