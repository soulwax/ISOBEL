{
  "compilerOptions": {
    "lib": ["esnext"],
    "target": "es2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "rootDir": "src",
    "outDir": "dist",
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "ffmpeggy": ["./node_modules/ffmpeggy/cjs/index.js"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
